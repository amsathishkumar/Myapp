<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|fill"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.sat.info.MainActivity"
        tools:ignore="RtlHardcoded" >

        <TextView
            android:id="@+id/textsat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info" />

        <EditText
            android:id="@+id/ids"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textsat"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="@string/id"
            android:inputType="text" />

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ids"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/age"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:ems="10"
            android:hint="Age"
            android:inputType="text"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editrmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age"
            android:ems="10"
            android:hint="@string/sat_sat_com"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editrmail"
            android:layout_marginTop="38dp"
            android:text="@string/btView" />

        <Button
            android:id="@+id/btsave"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btview"
            android:layout_below="@id/btview"
            android:text="@string/btSave" />

        <Button
            android:id="@+id/btDelete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btsave"
            android:layout_below="@id/btsave"
            android:text="@string/btdelete" />

        <Button
            android:id="@+id/btUpdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btDelete"
            android:text="@string/btupdate" />

        <Button
            android:id="@+id/btmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btUpdate"
            android:text="@string/btmail" />

        <Button
            android:id="@+id/btclear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btmail"
            android:text="@string/btclear" />
    </RelativeLayout>
</ScrollView>